rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to check if user exists
    function userExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && userExists() && getUserData().role == 'admin';
    }
    
    // Helper function to check if user is active
    function isActive() {
      return isAuthenticated() && userExists() && getUserData().status == 'aktif';
    }
    
    // Users collection - Admin can read/write all, users can only read their own
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Barang collection - All authenticated users can read and update
    match /barang/{barangId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Barang Masuk - All authenticated users can create, read, update
    match /barang_masuk/{docId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Barang Terpakai - All authenticated users can create, read, update
    match /barang_terpakai/{docId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Expired - All authenticated users can create, read, update
    match /expired/{docId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Order - All authenticated users can read, create, update
    match /order/{orderId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Refund - All authenticated users can read, create, update
    match /refund/{refundId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Notifications - All authenticated users can read, create, update, delete
    match /notifications/{notifId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }

    // Kategori - All authenticated users can read, Admin can create/update/delete
    match /kategori/{kategoriId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
  }
}
